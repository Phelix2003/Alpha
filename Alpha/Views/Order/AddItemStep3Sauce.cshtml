@model Alpha.Models.ViewModels.OrderedItemView

@{
    ViewBag.Title = "AddItemStep3Sauce";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quelle sauce voulez vous pour votre @Model.ItemName ?</h2>

@using (Html.BeginForm("AddItemStep3Sauce", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.DropDownList("SauceId", new SelectList(Model.ListofSauceView, "ItemId", "Name"))
    <input type="submit" class="btn btn-default" value="Ok" />
}

