@model Alpha.Models.ViewModels.OrderedItemView

@{
    ViewBag.Title = "AddItemStep4Meat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quelle viande voulez vous pour votre @Model.ItemName ?</h2>

@using (Html.BeginForm("AddItemStep4Meat", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.DropDownList("MeatId", new SelectList(Model.ListOfMeatsView, "ItemId", "Name"))
    <input type="submit" class="btn btn-default" value="Ok" />
}

