@model IEnumerable<Alpha.Models.Resto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New Restaurant", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>

        <th>
            Menu Name : 
            @Html.DisplayNameFor(model => model.Menu.Name)
        </th>


    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <img src="@Url.Action("RenderRestoPhoto", "Restaurant", new { RestoId = item.Id })" alt="No picture" />
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Create Payment account", "CreatePaymentAccount", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { RestoId = item.Id })
        </td>
    </tr>
    }
</table>

