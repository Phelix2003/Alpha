@model Alpha.Models.MenuViewModel

@{
    ViewBag.Title = "CreateMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateMenu</h2>

<h2>Create</h2>
@using (Html.BeginForm("CreateMenu", "Menu", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Création d'un nouveau Menu pour @Model.restoName . </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    @Html.HiddenFor(m => m.restoId)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



