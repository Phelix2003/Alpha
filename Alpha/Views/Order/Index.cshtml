@model Alpha.Models.ViewModels.OrderViewModels

@{
    ViewBag.Title = "Index";
}


<div class="jumbotron">
    <h1>Votre commande au @Model.Resto_Name</h1>@if (Model.ListOfProposedItems.Sum(r => r.Quantity) != 0) {<p class="text-right">Votyre commande (@Model.ListOfProposedItems.Sum(r => r.Quantity))</p>}



    TODO Ajouter Image resto ICI

    <hr />
    <h2> Menu </h2>
    @{int col = 0;}
    <div class="container">
        @foreach (var item in Model.ListOfProposedItems)
        {
            <div class="row">
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="@Url.Action("RenderItemPhoto", "Menu", new { ItemId = item.ItemId })" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@item.Name.ToString()@if (item.UnitPrice != 0){<text> - </text>@item.UnitPrice.ToString()<text>€</text>}</h4> 
                            <p>
                                @if (item.Quantity != 0)
                                {<text>(</text> @item.Quantity <text>)</text>}
                        </p>
                        <p class="card-text">@item.Description.ToString()</p>
                        <a href="@Url.Action("AddItemToOrder", "Order", new { ItemId = item.ItemId, OrderId = Model.OrderId })" class="btn btn-primary">Ajouter</a>
                    </div>
                </div>
            </div>

        </div>
    }
    </div>
</div>

    
