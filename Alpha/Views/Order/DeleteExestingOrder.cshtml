@model Alpha.Models.Order
@{
    ViewBag.Title = "DeleteExestingOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Vous avez une commande en cours dans un autre restaurant. Voulez-vous l'effacer?</h3>

@using (Html.BeginForm("DeleteExestingOrder", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-actions no-color">
        <input type="submit" value="Abandoner cette commande" class="btn btn-default" /> |
        @Html.ActionLink("Retour à la commande", "Index")
    </div>
}




